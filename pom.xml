<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.zhaoxiaogang</groupId>
    <artifactId>snail-framework</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>${project.groupId}:${project.artifactId}</name>
    <url>https://github.com/androidzhaoxiaogang/snail</url>
    <description>rest api framework</description>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:https://github.com/androidzhaoxiaogang/snail.git</connection>
        <developerConnection>scm:git:https://github.com/androidzhaoxiaogang/snail.git</developerConnection>
        <url>https://github.com/androidzhaoxiaogang/snail</url>
        <tag>${project.version}</tag>
    </scm>

    <developers>
        <developer>
            <name>snail</name>
            <email>286505491@qq.com</email>
            <url>http://blog.csdn.net/androidzhaoxiaogang</url>
        </developer>
    </developers>

    <modules>
        <module>snail-common</module>
        <module>snail-service</module>
        <module>snail-network</module>
        <module>snail-datasource</module>
        <module>snail-task</module>
        <module>snail-mq</module>
        <module>snail-starter</module>
        <module>snail-search</module>
        <module>snail-cache</module>
        <module>snail-domain</module>
        <module>snail-dao</module>
        <module>snail-datasource</module>
    </modules>

    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <project.build.jdk>${java.version}</project.build.jdk>
        <mysql.version>6.0.5</mysql.version>
        <spring.boot.version>1.4.3.RELEASE</spring.boot.version>
        <maven.scm.version>1.8.1</maven.scm.version>
        <maven.source.version>2.4</maven.source.version>
        <aspectj.version>1.6.12</aspectj.version>
    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <version>${maven.scm.version}</version>
                <configuration>
                    <connectionType>connection</connectionType>
                </configuration>
            </plugin>
            <!-- 要将源码放上去，需要加入这个插件 -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>${maven.source.version}</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--<plugin>-->
                <!--<groupId>org.apache.maven.plugins</groupId>-->
                <!--<artifactId>maven-gpg-plugin</artifactId>-->
                <!--<version>1.5</version>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<id>sign-artifacts</id>-->
                        <!--<phase>verify</phase>-->
                        <!--<goals>-->
                            <!--<goal>sign</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${project.build.jdk}</source>
                    <target>${project.build.jdk}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <!--snail modules -->
            <dependency>
                <groupId>snail</groupId>
                <artifactId>snail-common</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>snail</groupId>
                <artifactId>snail-network</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>snail</groupId>
                <artifactId>snail-service</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>snail</groupId>
                <artifactId>snail-datasource</artifactId>
                <version>${project.version}</version>
            </dependency>


            <!-- database -->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.version}</version>
            </dependency>

            <dependency>
                <groupId>javax.transaction</groupId>
                <artifactId>jta</artifactId>
                <version>1.1</version>
            </dependency>


            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>



        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>snail-framework</id>
            <name>Nexus Release Repository</name>
            <url>http://nexus.snail/content/groups/public/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
</project>